{
  "name": "beverost",
  "version": "1.0.0",
  "description": "Better server boost for server development in Node.js",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "npm run build:cjs && npm run build:mjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "start": "node dist/cjs/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "keywords": [
    "better",
    "server",
    "boost",
    "nodejs",
    "typescript",
    "development"
  ],
  "author": "Jandeampan",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.19",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "winston": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jandeampan/beverost.git"
  },
  "bugs": {
    "url": "https://github.com/Jandeampan/beverost/issues"
  },
  "homepage": "https://github.com/Jandeampan/beverost#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "tsconfig": "./tsconfig.json"
}
